<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settings.SettingsActivity">

    <RelativeLayout
        android:id="@+id/settingsRl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/settingsBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/settingsToolbar"
                android:layout_width="match_parent"
                android:background="@color/backgroundColorPrimary"
                app:title="Settings"
                app:navigationIcon="@drawable/ic_back"
                android:layout_height="?attr/actionBarSize"/>
        </com.google.android.material.appbar.AppBarLayout>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/settingsRv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/settingsRl"
        tools:listitem="@layout/settings_list_item" />

    <TextView
        android:id="@+id/logOutBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:textSize="14sp"
        android:textColor="@color/holo_red_light"
        android:text="Log out"
        app:layout_constraintTop_toBottomOf="@id/settingsRv"/>
</androidx.constraintlayout.widget.ConstraintLayout>